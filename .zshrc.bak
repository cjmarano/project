export PATH=/Users/home/.cache/emacs/:/Users/home/.cache/emacs/tree-sitter/:/Users/home/tree-sitter/:/opt/homebrew/opt/ruby/bin/:/opt/homebrew/lib/ruby/gems/3.3.5/bin/:/Users/home/.pyenv/versions/3.12.0/bin/:/Users/home/.pyenv/shims/:/Users/home/.pyenv/shims/pip/:/Users/home/.rbenv/shims/:/Users/home/.cargo/bin/:/Users/home/.local/bin/:/opt/homebrew/bin/:/opt/homebrew/sbin/:/usr/local/jamf/bin/:/usr/local/sbin/:/usr/local/bin/:/usr/sbin/:/usr/bin/:/bin/:/sbin/:/Library/Apple/usr/bin/:/home/linuxbrew/.linuxbrew/bin/brew:home/.local/bin:/home/linuxbrew/.linuxbrew/bin/:$PATH

ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"

if [ ! -d "$ZINIT_HOME" ]; then
    mkdir -p "$(dirname $ZINIT_HOME)"
    git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
fi

export PATH="home/.rbenv/bin:$PATH"
eval "$(rbenv init - zsh)"

# completions folder below does not exist.
# FPATH=~/.rbenv/completions:"$FPATH"

source /home/linuxbrew/.linuxbrew/opt/zinit/zinit.zsh 

zinit ice depth=1; zinit light romkatv/powerlevel10k

zinit light zsh-users/zsh-syntax-highlighting
zinit light zsh-users/zsh-completions
zinit light zsh-users/zsh-autosuggestions
zinit light Aloxaf/fzf-tab

zinit ice depth=1; zinit light romkatv/powerlevel10k

autoload -U compinit && compinit

zinit cdreplay -q

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

bindkey -e
bindkey '^p' history-search-backward
bindkey '^n' history-search-forward

HISTSIZE=1000
HISTFILE=~/.zsh_history
SAVEHIST=$HISTSIZE
HISTDUP=erase
setopt appendhistory
setopt sharehistory
setopt hist_ignore_space
setopt hist_ignore_all_dups
setopt hist_save_no_dups
setopt hist_ignore_dups
setopt hist_find_no_dups

zstyle ':completion:*' matcher-list 'm:{a-z}={A-Za-z}'
zstyle ':completion:*' list-colors "${(s.:.)LS_COLORS}"
zstyle ':completion:*' menu no
zstyle ':fzf-tab:complete:cd:*' fzf-preview 'ls --color $realpath'
zstyle ':fzf-tab:complete:__zoxide_z:*' fzf-preview 'ls --color $realpath'

alias ls='ls --color'
alias myip="curl http://ipecho.net/plain; echo"
alias la='colorls -all'
alias lb='cd ..'
alias lc='colorls -lA --sd'
alias ld='colorls -ltr'
alias lf='colorls -lath'
alias lg='colorls --gs'
alias lh='colorls'
alias ll='colorls -loa --sd'
alias lt='colorls --tree'
alias lk='batcat'

# pyenv config
export PYENV_ROOT="$HOME/.pyenv"
if command -v pyenv 1>/dev/null 2>&1; then
  eval "$(pyenv init -)"
fi

FPATH=~/.rbenv/completions:"$FPATH"

# Turn off all beeps
unsetopt BEEP
# Turn off autocomplete beeps
# unsetopt LIST_BEEP

test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

# Shell Integration.
eval "$(fzf --zsh)"
eval "$(zoxide init --cmd cd zsh)"

eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
